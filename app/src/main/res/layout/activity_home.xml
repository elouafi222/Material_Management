<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bk"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/premierligne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:padding="20dp"
        android:layout_below="@+id/title"
        android:gravity="center">

        <!-- to resize the image on ImageButton, use android:scaleType="fitXY" -->
        <!-- to make black border reqtangle around the image, use android:background="@color/white" -->

        <ImageButton
            android:id="@+id/monplaging"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/mon_planing"
            android:scaleType="centerInside"
            android:background="@drawable/border"
            android:contentDescription="mon planning"
            />

        <ImageButton
            android:id="@+id/nouveau"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/border"
            android:contentDescription="nouveau"
            android:src="@drawable/baseline_add_24" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dexiemeligne"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/premierligne"
        android:gravity="center">


        <ImageButton
            android:id="@+id/visualisation"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/visualisation"
            android:scaleType="centerInside"
            android:background="@drawable/border"
            android:contentDescription="visualisation"
            />

        <ImageButton
            android:id="@+id/analyse"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/analyse2"
            android:scaleType="centerInside"
            android:background="@drawable/border"
            android:contentDescription="analyse"
            />

    </LinearLayout>

</RelativeLayout>