<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:contentPadding="10dp"
    android:layout_height="450dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/popusNomtache"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Full house"
                        android:singleLine="true"
                        android:textSize="20sp"
                        android:layout_weight="1"
                        android:textColor="@android:color/black"/>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Full House is the Grand prize in any Tambola game played. It means all 15 Numbers of a ticket are cut, striked out"
                        android:singleLine="true"
                        android:alpha="0.5"
                        android:id="@+id/popusdescriptiontachereponce"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/datefintachepopus"
                        android:layout_width="59dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        tools:text="Durée:" />


                    <TextView
                        android:id="@+id/datefintachevaleur"
                        android:layout_toEndOf="@+id/datefintachepopus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:radius="10dp"
                        android:text="date"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="EMP:"
                        android:singleLine="true"
                        android:id="@+id/personnetachequestion"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"/>


                    <TextView
                        android:id="@+id/lespersonnetachevaleur"
                        android:layout_toEndOf="@+id/personnetachequestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:radius="10dp"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />




                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Chef:"
                        android:singleLine="true"
                        android:id="@+id/nomcheftache"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"/>


                    <TextView
                        android:id="@+id/valeurchefprojettache"
                        android:layout_toEndOf="@+id/nomcheftache"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:radius="10dp"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/nomprojetdetache"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        tools:text="nom projet:" />


                    <TextView
                        android:id="@+id/valeurnomprojettache"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="60dp"
                        android:radius="10dp"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/nomdumateriel"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:singleLine="true"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        tools:text="liste matérielle:" />


                    <TextView
                        android:id="@+id/listedemateriel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:radius="10dp"
                        android:text=""

                        android:textColor="@android:color/black"
                        android:textSize="12sp" />


                </LinearLayout>






            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>