<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardUseCompatPadding="true"
    app:cardElevation="5dp"
    app:cardCornerRadius="10dp"
    app:contentPadding="10dp"
    android:layout_height="140dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/nomtache2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Full house"
                    android:singleLine="true"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"/>


                <ImageView
                    android:id="@+id/validerTache"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/finirtache"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/descriptiontache"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Full house"
                    android:singleLine="true"
                    android:textSize="17sp"
                    android:layout_weight="1"
                    android:alpha="0.5"
                    android:textColor="@android:color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/durerestanttache"
                    android:layout_width="243dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:alpha="0.5"
                    android:paddingLeft="35dp"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    tools:text="djdf" />

                <TextView
                    android:id="@+id/statuttache"
                    android:layout_width="357dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:alpha="0.5"
                    android:paddingLeft="120dp"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp"
                    android:radius="10dp"
                    android:text="en cour d'execution"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>



